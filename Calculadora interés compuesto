<body>
  <h1>Calculadora de Interés Compuesto</h1>
  <div class="container">
    <label>Monto inicial (MXN):</label>
    <input type="number" id="montoInicial" value="10000">

    <label>Aportación mensual (MXN):</label>
    <input type="number" id="aportacion" value="1000">

    <label>Tasa de interés:</label>
    <input type="number" id="tasa" value="10" step="0.01">
    <select id="tipoTasa">
      <option value="anual">Anual</option>
      <option value="mensual">Mensual</option>
    </select>

    <label>Periodo:</label>
    <input type="number" id="periodo" value="12">
    <select id="tipoPeriodo">
      <option value="meses">Meses</option>
      <option value="años">Años</option>
    </select>

    <label>Capitalización:</label>
    <select id="capitalizacion">
      <option value="mensual">Mensual</option>
      <option value="trimestral">Trimestral</option>
      <option value="anual">Anual</option>
    </select>

    <button onclick="calcular()">Calcular</button>

    <div class="resultado" id="resultado"></div>

    <canvas id="grafica"></canvas>
  </div>

  <script>
    let chart;

    function calcular() {
      const montoInicial = parseFloat(document.getElementById('montoInicial').value) || 0;
      const aportacion = parseFloat(document.getElementById('aportacion').value) || 0;
      let tasa = parseFloat(document.getElementById('tasa').value) / 100;
      const tipoTasa = document.getElementById('tipoTasa').value;
      let periodo = parseFloat(document.getElementById('periodo').value);
      const tipoPeriodo = document.getElementById('tipoPeriodo').value;
      const capitalizacion = document.getElementById('capitalizacion').value;

      if (tipoTasa === 'anual') tasa /= 12;
      if (tipoPeriodo === 'años') periodo *= 12;

      let freqCap = 12;
      if (capitalizacion === 'trimestral') freqCap = 4;
      if (capitalizacion === 'anual') freqCap = 1;

      const pasos = periodo;
      const balance = [];
      let total = montoInicial;

      for (let i = 1; i <= pasos; i++) {
        total += aportacion;
        if (i % (12 / freqCap) === 0) {
          total *= (1 + tasa * (12 / freqCap));
        }
        balance.push(total);
      }

      const montoFinal = balance[balance.length - 1] || montoInicial;
      document.getElementById('resultado').innerHTML = 
        `Monto final estimado: <strong>$${montoFinal.toLocaleString('es-MX', {minimumFractionDigits:2})} MXN</strong>`;

      const ctx = document.getElementById('grafica').getContext('2d');
      if (chart) chart.destroy();
      chart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: Array.from({ length: pasos }, (_, i) => i + 1),
          datasets: [{
            label: 'Crecimiento del capital',
            data: balance,
            borderColor: '#111',
            backgroundColor: 'rgba(0,0,0,0.05)',
            borderWidth: 2,
            pointRadius: 0
          }]
        },
        options: {
          responsive: true,
          scales: {
            x: { title: { display: true, text: 'Meses' } },
            y: { title: { display: true, text: 'Capital (MXN)' } }
          }
        }
      });
    }
  </script>
</body>
</html>
